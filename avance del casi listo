								cout << "*****(****%%                        *                        %////%%////" << endl;
								cout << "(**&%%%&**%%                       ***                       %/%/&//%(%/" << endl;
								cout << "(**/(#(/**%%                      *****                      %(///%%////" << endl;
								cout << "#****//***%%                     *******                     %/////////(" << endl;
								cout << "#**#*(/((*%%                    **     **                    %(//%##%//(" << endl;
								cout << "#*//*#(//*%%                   ****   ****                   %(/(&&&&(/(" << endl;
								cout << "#****/****%%                  ****** ******                  &(//((((//(" << endl;
								cout << "#/****%%**%&                 ***************                 &(/(%(////(" << endl;
								cout << "(/********&&                                                 &(////////(" << endl;
								cout << " #/*/**///&&@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@&(///////(" << endl;
								cout << "    ##((((&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&#(####." << endl;
								
								
								ofstream archivo;
								archivo.open("puntaje.txt");

								if (!archivo) {
									cout << "Error al intentar abrir el archivo" << endl;

								}
								else {
									
									archivo << P;
									archivo.close();
								}
							
							
								c++;
								i = 5;

							}

						}

					}
					ave(&A, &B, &C, x1, y, z1, val1, val2, val3);
					check(&B, x1, y, z1, val1, val2, val3);
					cout << A << endl;
					cout << B << endl;
					cout << C << endl;
					system("pause");
					if (i == 4) {
						system("CLS");
						cout << "\t\thas perdido te quedaste sin oportunidades"<<endl;
						cout << "\t\tlos numeros eran :"<<endl;
						cout <<num<<endl;
						cout << numm << endl;
						cout << nummm << endl;
						system("pause");
					}
				}
				
			case 3:
				c++; break;
				break;

			}

		}
		return 0;
	}
	padre(int x, int y, int z) {};
};

