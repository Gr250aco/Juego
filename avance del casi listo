					if (num == val1) {
						if (numm == val2) {
							if (nummm == val3) {
								k++;
								P ++;
								sumar(&p);
								cout << p;
								cout << "Has ganado felicidades " << H << endl;
								cout << "TENGA SU NUEVA Y FLAMANTE NINTENDO SWITCH EDICION TEARS OF THE KINGDOM" << endl;
